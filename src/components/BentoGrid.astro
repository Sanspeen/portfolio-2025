<div class="parent">
  <div class="div1">EXPERIENCE</div>
  <div class="div2">PROJECTS</div>
  <div class="div3">CONTACT ME</div>
  <div class="div4">MY CURRICULUM</div>
  <div class="div5">EDUCATION</div>
  <div class="div6">TECHNOLOGIES</div>
</div>

<style>
  .parent {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 9px;
    width: 95%;
    height: 700px;
    margin-bottom: 100px;
  }

  .parent div {
    border: 2px solid black;
}

  .div1 {
    grid-column: span 3 / span 3;
  }

  .div2 {
    grid-row: span 3 / span 3;
    grid-column-start: 4;
  }

  .div3 {
    grid-column-start: 2;
    grid-row-start: 2;
  }

  .div4 {
    grid-column-start: 2;
    grid-row-start: 3;
  }

  .div5 {
    grid-row: span 2 / span 2;
    grid-column-start: 1;
    grid-row-start: 2;
  }

  .div6 {
    grid-row: span 2 / span 2;
    grid-column-start: 3;
    grid-row-start: 2;
  }
</style>
